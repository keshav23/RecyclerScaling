<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_gravity="top">

    <ImageView
        android:id="@+id/audio_chat_requests_slot_view_small"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_audio_memeber_request_bg" />

    <TextView
        android:id="@+id/audio_chat_requests_count_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/audio_chat_requests_slot_view"
        app:layout_constraintEnd_toEndOf="@id/audio_chat_requests_slot_view"
        app:layout_constraintStart_toStartOf="@id/audio_chat_requests_slot_view"
        app:layout_constraintTop_toTopOf="@id/audio_chat_requests_slot_view"
        tools:text="2" />

    <TextView
        android:id="@+id/audio_chat_request_label_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/audio_chat_requests_slot_view"
        app:layout_constraintStart_toStartOf="@id/audio_chat_requests_slot_view"
        app:layout_constraintTop_toBottomOf="@id/audio_chat_requests_slot_view"
        tools:text="Request" />


</androidx.constraintlayout.widget.ConstraintLayout>